{
  "name": "functions",
  "scripts": {
    "preinstall": "npm run npm-auth",
    "npm-auth": "npx google-artifactregistry-auth",
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --ext .js,.ts --fix .",
    "test": "echo \"No test specified\"",
    "build": "tsc --project tsconfig.json",
    "watch": "tsc --watch",
    "logs-pretty": "tail -f ../logs/app.dev.log | pino-pretty -i 'logging\\.googleapis\\.com/labels',_LOG_META_pid,_LOG_META_hostname,_LOG_META_loggerInstanceUuid,severity -m message -c -x debug:7,info:6,notice:5,warn:4,error:3 -X debug:green,info:blue,notice:cyan,warn:yellow,error:red",
    "emulate": "export PUBSUB_EMULATOR_HOST=localhost:8085 && firebase emulators:start --only pubsub,functions",
    "serve": "npm run build && firebase emulators:start --only functions,pubsub",
    "dev": "export PUBSUB_EMULATOR_HOST=localhost:8085 & npm run build:watch & firebase emulators:start --only pubsub,functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "migrations:run:dev": "",
    "deploy-only:app:dev": "cp .env.dev .env && firebase deploy --only functions:app && rm .env",
    "deploy-only:test:dev": "cp .env.dev .env && firebase deploy --only functions:test && rm .env",
    "deploy-only:dev": "cp .env.dev .env && firebase deploy --only functions && rm .env",
    "deploy:test:dev": "npm run lint && npm run build && npm run deploy-only:test:dev",
    "deploy:app:dev": "npm run lint && npm run build && npm run deploy-only:app:dev",
    "deploy:dev": "npm run lint && npm run build && npm run deploy-only:dev",
    "logs": "firebase functions:log",
    "seed:local": "ts-node ./src/db/seed/seed.ts",
    "seed:dev": "export ENV=DEV && ts-node ./src/db/seed/seed.ts",
    "teardown:dev": "export ENV=DEV && ts-node ./src/db/seed/teardown.ts",
    "initLocalDev": "$(gcloud beta emulators pubsub env-init) && ts-node ./src/scripts/localSetup.ts"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/logging-winston": "^6.0.0",
    "@google-cloud/pubsub": "^4.7.2",
    "@google-cloud/secret-manager": "^5.1.0",
    "@mobily/ts-belt": "^3.13.1",
    "@potw/schemas": "^1.0.16",
    "@potw/permissions": "^3.0.1",
    "@sendgrid/mail": "^8.1.1",
    "date-fns": "^3.6.0",
    "drizzle-orm": "^0.30.1",
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^5.0.1",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "mysql": "^2.18.1",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "postgres": "^3.4.3",
    "reflect-metadata": "^0.2.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/node": "^22.7.4",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "google-artifactregistry-auth": "^3.2.0",
    "typescript": "^4.9.0"
  },
  "private": true
}
